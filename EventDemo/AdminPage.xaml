<Page x:Class="EventDemo.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventDemo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Окно организатора">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnMyProfile" Click="btnMyProfile_Click">Мой профиль</Button>
        <StackPanel  Grid.Column="1" VerticalAlignment="Center">
            <TextBlock x:Name="tbHello"></TextBlock>
            <Button x:Name="btnEvents">Мероприятия</Button>
            <Button x:Name="btnParticipant">Участники</Button>
            <Button x:Name="btnJuty">Жюри</Button>
        </StackPanel>
    </Grid>
</Page>
